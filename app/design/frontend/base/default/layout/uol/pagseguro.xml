<layout version="0.1.0">
    <pagseguro_payment_payment>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="uol_pagseguro/payment" name="payment" template="uol/pagseguro/payment.phtml" />
        </reference>
    </pagseguro_payment_payment>

    <pagseguro_payment_payment>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate"><template>page/empty.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="uol_pagseguro/return" name="return" template="uol/pagseguro/return.phtml" />
        </reference>
    </pagseguro_payment_payment>

    <pagseguro_payment_payment>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="uol_pagseguro/error" name="error" template="uol/pagseguro/error.phtml" />
        </reference>
    </pagseguro_payment_payment>

    <checkout_onepage_index translate="label">
        <reference name="head">
            <block type="uol_pagseguro/payment" name="loading" template="uol/pagseguro/loading.phtml" />
        </reference>
    </checkout_onepage_index>
</layout>
