			<img src="<?php echo $this->helper('portfolio')->getBaseImage($portfolio)?>" alt="" class="img-responsive"/>
		</div>
	</div>
	
	<div class="col-md-4 col-sm-5 col-xs-12">
		<div class="portfolio-content">
