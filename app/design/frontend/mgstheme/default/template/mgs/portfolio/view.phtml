			<table class="table portfolio-table">
				<tbody>
					<?php if($portfolio->getPortfolioDate() != ''): ?>
						<tr>
							<td><?php echo $this->__('Date:') ?></td>
							<td><?php echo date('F d, Y', strtotime($portfolio->getPortfolioDate()))?></td>
