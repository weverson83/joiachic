?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar">
    <div class="pager">
            <div class="text-left">
                <div class="limiter">
                    <label><?php echo $this->__('Show') ?></label>	                
	                    <select name="select1" tabindex="1"  onchange="setLocation(this.value)">
	                    <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
	                        <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
	                            <?php echo $_limit ?>
	                        </option>
	                    <?php endforeach; ?>
	                    </select>	    
						<?php if($this->getCurrentDirection() == 'desc'): ?>
	                  <a href="<?php echo $this->getOrderUrl(null, 'asc') ?>" title="<?php echo $this->__('Set Ascending Direction') ?>"><i class="fa fa-long-arrow-up"></i></a>
					<?php else: ?>
	                  <a href="<?php echo $this->getOrderUrl(null, 'desc') ?>" title="<?php echo $this->__('Set Descending Direction') ?>"><i class="fa fa-long-arrow-down"></i></a>
					<?php endif; ?>		
                </div>
                
            </div>

			<div class="text-right">
				<?php if( $this->isEnabledViewSwitcher() ): ?>
					<div class="view-mode right">
						<?php $_modes = $this->getModes(); ?>
						<?php if($_modes && count($_modes)>1): ?>
						<?php foreach ($this->getModes() as $_code=>$_label): ?>
							<?php if($this->getMode()==$_code): ?>
								<strong title="<?php echo $_label ?>" class="<?php echo strtolower($_code); ?>">
									<?php if($_label == "Grid"): ?>
										<i class="fa fa-th-large"></i>
									<?php else: ?>
										<i class="fa fa-list"></i>
									<?php endif; ?>
								</strong>&nbsp;
							<?php else: ?>
								<a href="<?php echo $this->getModeUrl($_code) ?>" title="<?php echo $_label ?>" class="<?php echo strtolower($_code); ?>">
									<?php if($_label == "Grid"): ?>
										<i class="fa fa-th-large"></i>
									<?php else: ?>
										<i class="fa fa-list"></i>
									<?php endif; ?>
								</a>&nbsp;
							<?php endif ?>
						<?php endforeach; ?>
						<?php endif; ?>
					</div>    
				<?php endif; ?>
				
			</div>
			<div class="sort-by text-right">
					<!--label><?php echo $this->__('Sort By') ?></label-->
					<div class=" select_wrapper width1">
						<select name="select2" tabindex="2" onchange="setLocation(this.value)">
						<?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
							 <option value="<?php echo $this->getOrderUrl($_key, 'asc') ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
								  <?php echo $this->__($_order) ?>
							 </option>
						<?php endforeach; ?>
						</select>
					 </div>
				</div>
            
            
            <div class="element_blog pull-left">
				<?php echo $this->getPagerHtml() ?>
