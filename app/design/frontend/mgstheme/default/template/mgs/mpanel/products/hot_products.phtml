?>
<?php if ($this->getTitle() != ''): ?>
    <div class="carousel_wrapper">
        <div class="title">
            <h2><?php echo $this->getTitle() ?></h2>
        </div>
    </div>
<?php endif ?>
<?php if (($_products = $this->getSpecialProducts('hot')) && (count($_products) > 0)): ?>
    <?php $helper = $this->helper('mpanel') ?>
    <?php $size = $helper->convertRatioToSize($this->getProductRatio()) ?>
    <?php
    if ($this->getCountPerRow()) {
        $col = $this->getCountPerRow();
    } else {
        $col = 3;
    }
    $perrow = $col;
    $col = $helper->convertColRowCustom($col);
    ?>

    <?php $catId = ''; ?>
    <?php if ($this->getCategoryId() != ''): ?>
        <?php $catId = $this->getCategoryId() ?>
    <?php endif ?>

    <?php if ($this->getSlider() == 1): ?>

        <?php $_collectionSize = count($_products) ?>
        <?php $_columnCount = 1; ?>
        <?php if ($this->getNumberRow() != ''): ?>
            <?php $_columnCount = $this->getNumberRow() * $this->getCountPerRow(); ?>
        <?php endif ?>
        <div class="row">
            <div class="products-grid">
                <div class="<?php if ($this->getNumberRow() != 1): ?><?php if ($col == 'custom-5' || $col == 'custom-7' || $col == 'custom-8'): ?> col-md-<?php echo $col; ?><?php endif; ?><?php endif; ?> owl-carousel products-carousel product-category-tab row-<?php echo $perrow ?>" id="hot_products<?php echo $catId ?>">
                    <?php $i = 0; $j = 0; foreach ($_products as $_product): $j++; ?>
                        <?php $_product = Mage::getModel('catalog/product')->load($_product->getId()) ?>
                        <?php if ($this->getNumberRow() > 1): ?>
                            <?php if ($i++ % $_columnCount == 0): ?>
                                <div class="item">
                            <?php endif ?>
                        <?php endif ?>
						<?php if ($this->getNumberRow() > 1): ?>
						<?php $class = $helper->getItemClass($perrow, $j) ?>
							<div class="<?php if ($col != ''): ?>col-md-<?php echo $col; ?> col-sm-6 col-xs-12<?php endif; ?><?php if($j %  $perrow == 1):?> first-row-item <?php endif ?><?php echo $class ?>">
						<?php else: ?>
							<div class="item">
						<?php endif ?>
								<div class="product-content">
									<div class="product-top">
										<a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>" class="product-image">
											<img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize($size['width'], $size['height']) ?>" alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>" class="img-responsive"/>
										</a>
										<?php echo $helper->getProductLabel($_product) ?>
										<?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
									</div>
									<div class="product-desc">
										<h4 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>)"><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getName() , 'name') ?></a></h4>
										<?php echo $this->getPriceHtml($_product, true, '-widget-new-grid') ?>
										<div class="controls">
										<?php if($helper->isShowAddtoCart()): ?>
											<div class="add-to-cart">
												<?php if ($_product->isSaleable()): ?>
													<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="btn btn-cart btn-xs btn-primary" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')"><?php echo $this->__('Add To Cart'); ?></button>
												<?php else: ?>
													<p><?php echo $this->__('Our of stock') ?></p>
												<?php endif; ?>
											</div>
										<?php endif ?>
											<ul class="icon-links">
											<?php if($this->helper('core')->isModuleEnabled('MGS_QuickView') && Mage::getStoreConfig('quickview/general/active')): ?>
												<li class="li-quickview"><button type="button" title="<?php echo $this->__('Quickview') ?>" class="btn-quickview quick-view" onclick="quickView('<?php echo $_product->getProductUrl() ?>'); return false;"><em class="fa fa-search"></em></button></li>
											<?php endif ?>
											<?php if ($this->helper('wishlist')->isAllow() && $helper->isShowWishList()) : ?>
												<li><button type="button" title="<?php echo $this->__('Add to Wishlist') ?>" onclick="setLocation('<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>')"><em class="fa fa-heart-o"></em></button></li>
											<?php endif; ?>
											<?php if($_compareUrl=$this->getAddToCompareUrl($_product) && $helper->isShowCompare()): ?>
												<li><button type="button" title="<?php echo $this->__('Add to Compare') ?>" onclick="setLocation('<?php echo $_compareUrl ?>')"><em class="fa fa-retweet"></em></button></li>
											<?php endif; ?>
											</ul>
										</div>
									</div>
								</div>                                
							</div>
						<?php if ($this->getNumberRow() > 1): ?>
							<?php if ($i % $_columnCount == 0 || $i == $_collectionSize): ?>
								</div>
							<?php endif ?>
                        <?php endif ?>
					<?php endforeach ?>
                </div>
			</div>
		</div>
            <script type="text/javascript">
                initSlider('hot_products<?php echo $catId ?>', <?php if ($this->getNumberRow() > 1): ?>1<?php else: ?><?php echo $this->getCountPerRow() ?><?php endif ?>, <?php echo $this->getAutoPlay() ?>, <?php echo $this->getStopHover() ?>, <?php echo $this->getNavigation() ?>, <?php echo $this->getPagination() ?>);
            </script>
            <?php else: ?>
            <ul class="products-grid<?php if ($col == 'custom-5' || $col == 'custom-7' || $col == 'custom-8'): ?> col-md-<?php echo $col; ?><?php endif; ?> row-<?php echo $perrow ?>" id="hot_product_container<?php echo $catId ?>">
                <?php
                echo $this->getLayout()
                        ->createBlock('mpanel/products')
                        ->setProductsCount($this->getProductsCount())
                        ->setProductRatio($this->getProductRatio())
                        ->setCategoryId($this->getCategoryId())
                        ->setCountPerRow($this->getCountPerRow())
                        ->setTemplate('mgs/mpanel/products/grid/hot_products.phtml')
                        ->toHtml();
                ?>
            </ul>

        <?php if ($this->getLoadMore()): ?>
                <div class="tooltip-links" id="hot_loadmore_button">
                    <div class="loading"></div>
                    <div class="button">
                        <a class="btn btn-primary btn-loadmore" data-toggle="tooltip" data-placement="bottom" data-original-title="<?php echo $this->__('Load more') ?>" onclick="loadMore(hotCount++, 'hot', <?php echo $this->getProductsCount() ?>, <?php echo $this->getCountPerRow() ?>)"><em class="fa fa-plus">&nbsp;</em></a>
                    </div>
                </div>
            <?php endif ?>
        <?php endif ?>
<?php else: ?>
    <div class="alert alert-danger no-product-display">
        <p><?php echo $this->__('There are no products matching the selection.') ?></p>
    </div>
<?php endif; ?>
