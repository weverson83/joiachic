/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>
<div class="btn-group form-language">
  <button class="btn dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown">
    <?php foreach ($this->getStores() as $_lang): ?>
        <?php if($_lang->getId() == $this->getCurrentStoreId()): ?>
        	<?php $flagPath = 'images/flags/'.$_lang->getCode().'.png';?>
            <?php if(Mage::getStoreConfig('mgs_theme/general/header') == "header" || Mage::getStoreConfig('mgs_theme/general/header') == "header3" 
            		|| Mage::getStoreConfig('mgs_theme/general/header') == "header4" || Mage::getStoreConfig('mgs_theme/general/header') == "header5"): ?><span class="lang hidden-xs"><?php echo $this->__("Language:"); ?></span><?php endif; ?><img width="20" src="<?php echo $this->getSkinUrl($flagPath) ?>" alt=""/>
        <?php endif;?>
    <?php endforeach; ?>
    <span style="" class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
      <?php foreach ($this->getStores() as $_lang): ?>
      	<?php $flagPath = 'images/flags/'.$_lang->getCode().'.png';?>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="<?php echo $_lang->getCurrentUrl() ?>"><img width="20" src="<?php echo $this->getSkinUrl($flagPath) ?>" alt=""/><?php echo $_lang->getName(); ?></a></li>
    <?php endforeach; ?>
  </ul>
</div>
<?php endif; ?>
