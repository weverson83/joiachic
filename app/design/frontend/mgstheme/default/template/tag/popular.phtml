<?php
if ($this->getTitle() != '') {
    $title = $this->getTitle();
} else {
    $title = 'Popular Tags';
}
?>
<?php if (count($this->getTags()) > 0): ?>
    <div class="block block-tags">
        <div class="block-title">
            <h4><?php echo $this->__($title); ?></h4>
        </div>
        <div class="tagcloud">
            <?php foreach ($this->getTags() as $_tag): ?>
                <a href="<?php echo $_tag->getTaggedProductsUrl() ?>"><?php echo $this->escapeHtml($_tag->getName()) ?></a>
            <?php endforeach; ?>
        </div>
    </div>
<?php else: ?>
<?php if (Mage::helper('mpanel')->acceptToUsePanel()): ?>
<div class="block block-tags">
        <div class="title">
            <h3><?php echo $this->__($title); ?></h3>
        </div>
        <div class="tagcloud">
            <p><?php echo $this->__('Have no tags.'); ?></p>
        </div>
    </div>
<?php endif; ?>
    <?php
 endif ?>
