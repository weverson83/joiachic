/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="form-currency">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
      	<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
            <?php if($_code==$this->getCurrentCurrencyCode()): ?>
                    <a href="javascript: void(0)" class="dropdown-toggles"><?php echo Mage::app()->getLocale()->currency($_code)->getSymbol();?> <?php echo $_code ?></a>
            <?php endif;?>
	<?php endforeach; ?>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
      <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo Mage::app()->getLocale()->currency($_code)->getSymbol();?> <?php echo $_code ?></a></li>
      <?php endforeach; ?>
  </ul>
</div>
<?php endif; ?>
