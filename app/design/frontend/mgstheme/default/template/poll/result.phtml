<?php
if ($this->getTitle() != '') {
    $title = $this->getTitle();
} else {
    $title = 'Community Poll';
}
?>
<?php if (isset($poll)) : ?>
    <div class="block block-poll">
        <div class="block-title">
            <h4><?php echo $this->__($title) ?></h4>
        </div>
        <div class="block-content">
            <p class="block-subtitle"><?php echo $this->escapeHtml($poll->getPollTitle()); ?></p>
            <?php if ($poll_answers): ?>
                <div id="skills" class="skills_bar">
                    <?php foreach ($poll_answers as $answer): ?>
                        <small><?php echo $this->escapeHtml($answer->getAnswerTitle()) ?></small>
                        <div class="progress wow slideInLeft">
                            <div class="progress-bar" role="progressbar" aria-valuenow="<?php echo $answer->getPercent() ?>" aria-valuemin="0" aria-valuemax="100" style="width: <?php echo $answer->getPercent() ?>%;">
                                <span class="skill_count"><?php echo $answer->getPercent() ?>%</span>
                            </div>
                        </div>
                    <?php endforeach; ?>
                </div>
            <?php endif; ?>
        </div>
    </div>
<?php endif; ?>
