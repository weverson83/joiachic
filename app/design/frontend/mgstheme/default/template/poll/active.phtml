<?php
if ($this->getTitle() != '') {
    $title = $this->getTitle();
} else {
    $title = 'Community Poll';
}
?>
<?php if (isset($poll)) : ?>
    <div class="block block-poll">
        <script type="text/javascript">
            //<![CDATA[
            function validatePollAnswerIsSelected()
            {
                var options = $$('input.poll_vote');
                for( i in options ) {
                    if( options[i].checked == true ) {
                        return true;
                    }
                }
                return false;
            }
            //]]>
        </script>
        <div class="block-title">
            <h4><?php echo $this->__($title) ?></h4>
        </div>
        <div class="block-content">
            <form id="pollForm" action="<?php echo $action ?>" method="post" onsubmit="return validatePollAnswerIsSelected();">
                <div class="block-content">
                    <p class="block-subtitle"><?php echo $this->escapeHtml($poll->getPollTitle()); ?></p>
                    <?php if ($poll_answers): ?>
                        <?php foreach ($poll_answers as $answer): ?>
                            <div class="col-md-12">
                                <span>
                                    <input type="radio" name="vote" class="radio poll_vote" id="vote_<?php echo $answer->getId() ?>" value="<?php echo $answer->getAnswerId() ?>" />
                                    <label for="vote_<?php echo $answer->getId() ?>" class="radio-inline">
                                        <?php echo $this->escapeHtml($answer->getAnswerTitle()) ?>
                                    </label>
                                </span>
                            </div>
                        <?php endforeach; ?>
                    <?php endif; ?>
                    <button class="btn btn-sm btn-primary pull-right" type="submit" title="<?php echo $this->__('Vote') ?>"><?php echo $this->__('Vote') ?></button>
                </div>
            </form>
        </div>
    </div>
<?php endif; ?>
