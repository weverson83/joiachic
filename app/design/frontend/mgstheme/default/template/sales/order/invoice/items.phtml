<?php  $_order = $this->getOrder() ?>
<br/>
<?php foreach ($_order->getInvoiceCollection() as $_invoice): ?>
<div class="page-title title-buttons order-view">
	<h1 class="sub-title"><?php echo $this->__('Invoice #') ?><?php echo $_invoice->getIncrementId(); ?></h1>
	<button class="btn btn-default print-order" type="button" onclick="window.open('<?php echo $this->getPrintInvoiceUrl($_invoice) ?>','_blank');"><?php echo $this->__('Print Invoice') ?></button>
</div>

<h2 class="table-caption"><?php echo $this->__('Items Invoiced') ?></h2>

<div class="featured-box featured-box-secundary featured-view-box order-view">
	<div class="box-content">
		<table class="shop_table cart custom-table" id="my-invoice-table-<?php echo $_invoice->getId(); ?>">
			<thead>
				<tr>
					<th><?php echo $this->__('Product Name') ?></th>
					<th class="order-date"><?php echo $this->__('SKU') ?></th>
					<th class="order-date"><?php echo $this->__('Price') ?></th>
					<th class="a-center"><span class="nobr"><?php echo $this->__('Qty Invoiced') ?></span></th>
					<th class="a-right"><?php echo $this->__('Subtotal') ?></th>
				</tr>
			</thead>
			<tfoot>
				<?php echo $this->getInvoiceTotalsHtml($_invoice)?>
			</tfoot>
			<?php $_items = $_invoice->getAllItems(); ?>
			<?php $_count = count($_items) ?>
			<?php foreach ($_items as $_item): ?>
			<?php if ($_item->getOrderItem()->getParentItem()) continue; ?>
			<tbody>
				<?php echo $this->getItemHtml($_item) ?>
			</tbody>
			<?php endforeach; ?>
		</table>
	</div>
</div>
<?php echo $this->getInvoiceCommentsHtml($_invoice)?>
<?php endforeach; ?>
