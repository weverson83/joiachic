<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
 <h1 class="short"><?php echo $this->__('My Product Reviews') ?></h1>
<?php if( $this->getCollection() && $this->count()): ?>
<div class="top-toolbar">
    <?php echo $this->getToolbarHtml() ?>
</div>
<?php foreach ($this->getCollection() as $_review): ?>
<div class="product-item">
	<p><span>Date:</span><?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></p>
	<p><span>Product:</span><a href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>"><?php echo $this->escapeHtml($_review->getName()) ?></a></p>
	<?php if($_review->getSum()): ?>
		<div class="rating-box">
			<div class="rating" style="width:<?php echo ( $_review->getSum() / $_review->getCount() ) ?>%;"></div>
		</div>
	<?php endif; ?>
	<p><?php echo $this->helper('review')->getDetailHtml($_review->getDetail()) ?></p>
	<p><a href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>" class="nobr"><?php echo $this->__('View Details') ?></a></p>
</div>
<?php endforeach; ?>
<script type="text/javascript">decorateTable('my-reviews-table')</script>
<div class="bottom-toolbar">
    <?php echo $this->getToolbarHtml() ?>
</div>
<?php else: ?>
    <p><?php echo $this->__('You have submitted no reviews.') ?></p>
<?php endif; ?>
<div class="buttons-set">
    <p class="back-link"><a href="<?php echo $this->escapeUrl($this->getBackUrl()) ?>"><small>&laquo; </small><?php echo $this->__('Back') ?></a></p>
</div>
