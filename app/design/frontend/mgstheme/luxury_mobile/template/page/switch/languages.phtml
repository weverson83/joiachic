/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>
<div class="btn-group form-language">
	<span id="languageLabel" data-toggle="dropdown">
		<?php foreach ($this->getStores() as $_lang): ?>
        <?php if($_lang->getId() == $this->getCurrentStoreId()): ?>
                <?php echo $this->escapeHtml($_lang->getName()) ?>
        <?php endif;?>
    <?php endforeach; ?>&nbsp;&nbsp;<span class="fa fa-angle-down"></span>
	</span>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1" style="display:none" id="language-dropdown">
      <?php foreach ($this->getStores() as $_lang): ?>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="<?php echo $_lang->getCurrentUrl() ?>"><?php echo $this->escapeHtml($_lang->getName()) ?></a></li>
    <?php endforeach; ?>
  </ul>
</div>
<?php endif; ?>
