<?php $_collectionSize = $this->getItems()->getSize() ?>
<?php $_columnCount = 2; ?>
<?php $helper = $this->helper('mpanel') ?>
<?php $size = $helper->convertRatioToSize() ?>
<?php if($this->getItems()->getSize()): ?>
<div class="block block-related">
    <div class="block-title">
        <h3><?php echo $this->__('Related Products') ?></h3>
    </div>
    
	<?php $i=0; foreach($this->getItems() as $_item): ?>
		<?php if ($i++%$_columnCount==0): ?>
		<ul class="products-grid">
		<?php endif ?>
		<li class="item">
			<div class="product-content">
				<div class="product-top">
					 <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="product-image">
						<img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize($size['width'], $size['height']) ?>" alt="" />
					</a>
				</div>

				<p class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></p>
				<?php echo $this->getPriceHtml($_item, true, '-related') ?>

				<button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><em class="fa fa-shopping-cart"></em><?php echo $this->__('Add To Cart'); ?></button>


			</div>
		</li>
		<?php if ($i%$_columnCount==0 || $i==$_collectionSize): ?>
		</ul>
		<?php endif ?>
		<?php endforeach ?>
    </div>
</div>
<?php endif ?>
