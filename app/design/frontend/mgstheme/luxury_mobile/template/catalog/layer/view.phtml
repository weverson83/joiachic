/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
<div class="filters-block" id="filters-block">
	<?php if($this->canShowOptions()): ?>
		<label class="shop-by" onclick="toggleShopby()"><?php echo $this->__('Shop By') ?></label>
	<?php endif; ?>

	<div class="block-content" style="display:none">
    <?php echo $this->getStateHtml() ?>
    <?php if ($this->getLayer()->getState()->getFilters()): ?>
        <div class="actions"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?> <span class="fa fa-trash"></span></a></div>
    <?php endif; ?>
    
    <?php if($this->canShowOptions()): ?>
		<?php $_filters = $this->getFilters() ?>
		<?php $i=0; foreach ($_filters as $_filter): $i++; ?>
			<?php if($_filter->getItemsCount()): ?>
			<dl id="filter-item-<?php echo $i ?>">
				<dt onclick="toggleFilterItem(<?php echo $i ?>)"><h3><?php echo $this->__($_filter->getName()) ?></h3></dt>
				<dd style="display:none"><?php echo $_filter->getHtml() ?></dd>
			</dl>
			<?php endif; ?>
		<?php endforeach; ?>
    <?php endif; ?>
    </div>
</div>
<?php endif; ?>
