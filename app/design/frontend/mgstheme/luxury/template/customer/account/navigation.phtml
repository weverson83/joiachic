<div class="block block-layered-nav">
	<div class="title-block">
		<h4><?php echo $this->__('My Account'); ?></h4>
	</div> 
	<ul class="nav nav-tabs nav-stacked account-menu">
		<?php $_links = $this->getLinks(); ?>
		<?php $_index = 1; ?>
		<?php $_count = count($_links); ?>
		
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_address') == 1): ?>
			<?php unset($_links['address_book']); /* Address */?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_my_order') == 1): ?>
			<?php unset($_links['orders']); /* My Orders */ ?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_billing_agreements') == 1): ?>
			<?php unset($_links['billing_agreements']); /* Billing Agreements */ ?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_recurring_profiles') == 1): ?>
			<?php unset($_links['recurring_profiles']); /* Recurring Profiles */ ?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_my_reviews') == 1): ?>
			<?php unset($_links['reviews']);  /* Reviews */ ?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_my_tags') == 1): ?>
			<?php unset($_links['tags']); /* My Tags */ ?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_my_wishlist') == 1): ?>
			<?php unset($_links['wishlist']); /* Wishlist */ ?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_my_applications') == 1): ?>
			<?php unset($_links['OAuth Customer Tokens']); /* My Applications */ ?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_newsletter_subscriptions') == 1): ?>
			<?php unset($_links['newsletter']); /* Newsletter */ ?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_downloadable_products') == 1): ?>
			<?php unset($_links['downloadable_products']); /* My Downloadable Products */ ?>
		<?php endif; ?>
		<?php if(Mage::getStoreConfig('mpanel/my_account/disable_product_questions') == 1): ?>
			<?php unset($_links['productquestions']); /* Products Question */ ?>
		<?php endif; ?>
		<?php foreach ($_links as $_link): ?>
			<?php $_last = ($_index++ >= $_count); ?>
			<?php if ($this->isActive($_link)): ?>
				<li class="active<?php echo ($_last ? ' last' : '') ?>"><a href="#"><?php echo $_link->getLabel() ?></a></li>
			<?php else: ?>
				<li<?php echo ($_last ? ' class="last"' : '') ?>><a href="<?php echo $_link->getUrl() ?>"><?php echo $_link->getLabel() ?></a></li>
			<?php endif; ?>
		<?php endforeach; ?>
	</ul>
</div>