<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Update Cart'); ?>
<?php if ($_product->isSaleable()): ?>
    <div class="add-to-cart">
		<div class="col-md-12 no-padding form-group">
			<?php if (!$_product->isGrouped()): ?>
			<label class="pull-left" for="qty"><?php echo $this->__('Qty:') ?></label>
			<input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text form-control qty input-qty-product pull-left" />
			<?php endif; ?>
		</div>
        <div class="col-md-4 no-padding">
			 <button type="button" title="<?php echo $buttonTitle ?>" class="btn-cart btn btn-md btn-primary btn-full" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>
		</div>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
<?php endif; ?>
