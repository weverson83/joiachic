<div class="tagcloud">
	<span class="h6"><?php echo $this->__('Tags'); ?>:</span>
    <?php $tags = explode(',', $this->getPost()->getTags()); ?>
    <?php foreach ($tags as $tag): ?>
        <a href="<?php echo Mage::getUrl(Mage::helper('blog')->getRoute() . '/tag/' . urlencode($tag)) ?>"><?php echo $tag ?></a>
    <?php endforeach; ?>
</div>