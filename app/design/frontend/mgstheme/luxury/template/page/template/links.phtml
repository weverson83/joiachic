<?php
/**
 * @see Mage_Page_Block_Template_Links
 */
?>
<?php $_helpercp = $this->helper('catalog/product_compare'); ?>
<?php $count_cp = $_helpercp->getItemCount() ?>
<?php $_links = $this->getLinks(); ?>
<?php if(count($_links)>0): ?>
<div class="account-dropdown links">
<a href="dropdown-toggle" data-toggle="dropdown" class="account-links"><i class="fa fa-user"></i></a>
<ul role="menu" class="dropdown-menu"<?php if($this->getName()): ?> id="<?php echo $this->getName() ?>"<?php endif;?>>
	<?php if($count_cp > 0): ?>
		<li>
			<a href="javascript:void(0)" onclick="popWin('<?php echo $_helpercp->getListUrl() ?>','compare','top:0,left:0,width=1024,height=600,resizable=yes,scrollbars=yes')">
				<?php echo $this->__('Compare') ?>&nbsp;<span class="count">(<?php echo $count_cp ?>&nbsp;<?php if($count_cp > 1): ?><?php echo $this->__('items') ?><?php else: ?><?php echo $this->__('item') ?><?php endif ?>)</span>
			</a>
		</li>
	<?php endif ?>
    <?php foreach($_links as $_link): ?>
        <?php if ($_link instanceof Mage_Core_Block_Abstract):?>
            <?php echo $_link->toHtml() ?>
        <?php else: ?>
            <li<?php if($_link->getIsFirst()||$_link->getIsLast()): ?> class="<?php if($_link->getIsFirst()): ?>first<?php endif; ?><?php if($_link->getIsLast()): ?> last<?php endif; ?>"<?php endif; ?> <?php echo $_link->getLiParams() ?>><?php echo $_link->getBeforeText() ?><a href="<?php echo $_link->getUrl() ?>" title="<?php echo $_link->getTitle() ?>" <?php echo $_link->getAParams() ?>><i class="fa <?php echo str_replace(' ','-', mb_strtolower($_link->getTitle()))?>"></i><?php echo $_link->getLabel() ?></a><?php echo $_link->getAfterText() ?></li>
        <?php endif;?>
    <?php endforeach; ?>
</ul>
</div>
<?php endif; ?>
