    <adminhtml_report_salesbycustomergroup>
        <reference name="messages">
            <action method="addNotice" translate="message">
                <message>This report depends on timezone configuration. Once timezone is changed, the lifetime statistics need to be refreshed.</message>
            </action>
        </reference>
        <reference name="content">
            <block type="advancedreports/adminhtml_report_salesbycustomergroup" template="mgs/advancedreports/report/salesbycustomergroup/grid/container.phtml" name="advancedreports.report.salesbycustomergroup">
                <block type="adminhtml/store_switcher" template="report/store/switcher/enhanced.phtml" name="store.switcher">
                    <action method="setStoreVarName">
                        <var_name>store_ids</var_name>
                    </action>
                </block>
                <block type="advancedreports/adminhtml_report_salesbycustomergroup_filter_form" name="grid.filter.form">
                    <action method="setFieldVisibility">
                        <field>report_type</field>
                        <visibility>0</visibility>
                    </action>
                </block>
            </block>
        </reference>
    </adminhtml_report_salesbycustomergroup>
