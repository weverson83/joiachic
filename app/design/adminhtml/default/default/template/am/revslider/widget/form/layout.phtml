<script type="text/javascript">
    document.observe('dom:loaded', function(){
        updateLayoutPreview();

        'layout|auto_height|force_full_width|full_screen_align_force'.split('|').each(function(elm){
            Event.observe($(elm), 'change', function(){
                updateLayoutPreview();
            });
        });
    });

    function updateLayoutPreview(){
        var layout = $('layout-preshow'),
            classes = [];

        var layout_type = $('layout').value;
        switch (layout_type){
            case 'fullwidth':
                classes.push('lp-autoresponsive');
                break;
            case 'responsitive':
                classes.push('lp-custom');
                break;
            default:
                classes.push('lp-' + layout_type);
        }
        if (!$('auto_height').disabled && $('auto_height').value == 'on'){
            classes.push('lp-autoheight');
        }
        if (!$('force_full_width').disabled && $('force_full_width').value == 'on'){
            classes.push('lp-fullwidth');
        }
        if (!$('full_screen_align_force').disabled && $('full_screen_align_force').value == 'on'){
            classes.push('lp-fullscreenalign');
        }
        layout.className = classes.join(' ');
    }
</script>
