<config>
    <modules>
        <MGS_Advancedreports>
            <version>0.1.0</version>
        </MGS_Advancedreports>
    </modules>    
    <admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<MGS_Advancedreports after="Mage_Adminhtml">MGS_Advancedreports_Adminhtml</MGS_Advancedreports>
					</modules> 
				</args>
			</adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <advancedreports>
                    <file>advancedreports.xml</file>
                </advancedreports>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <advancedreports>
                <class>MGS_Advancedreports_Model</class>
                <resourceModel>advancedreports_mysql4</resourceModel>
            </advancedreports>
            <advancedreports_mysql4>
                <class>MGS_Advancedreports_Model_Mysql4</class>
                <entities>
                    <salesbycountry>
                        <table>sales_flat_order</table>
                    </salesbycountry>
                    <salesbycustomergroup>
                        <table>sales_flat_order</table>
                    </salesbycustomergroup>		    
                    <salesbycouponcode>
                        <table>sales_flat_order</table>
                    </salesbycouponcode>
                    <salesbyproduct>
                        <table>sales_flat_order_item</table>
                    </salesbyproduct>
                    <salesbyhour>
                        <table>advancedreports_hour</table>
                    </salesbyhour>
                    <salesbydayofweek>
                        <table>advancedreports_dayofweek</table>
                    </salesbydayofweek>
                    <salesbynewandreturning>
                        <table>advancedreports_newandreturning</table>
                    </salesbynewandreturning>
                </entities>
            </advancedreports_mysql4>
        </models>
        <resources>
            <advancedreports_setup>
                <setup>
                    <module>MGS_Advancedreports</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </advancedreports_setup>
            <advancedreports_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </advancedreports_write>
            <advancedreports_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </advancedreports_read>
        </resources>
        <blocks>
            <advancedreports>
                <class>MGS_Advancedreports_Block</class>
            </advancedreports>
        </blocks>
        <helpers>
            <advancedreports>
                <class>MGS_Advancedreports_Helper</class>
            </advancedreports>
        </helpers>
    </global>
    <default>
        <advancedreports>
            <general>
                <active>1</active>
                <enable_google_charts>1</enable_google_charts>
            </general>
        </advancedreports>
    </default>
</config>