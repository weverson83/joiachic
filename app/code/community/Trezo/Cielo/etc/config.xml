<?xml version="1.0"?>
<config>
	<modules>
		<Trezo_Cielo>
			<version>1.0.0</version>
		</Trezo_Cielo>
	</modules>
	<global>
		<models>
			<trezo_cielo>
				<class>Trezo_Cielo_Model</class>
			</trezo_cielo>
		</models>
		<blocks>
			<trezo_cielo>
				<class>Trezo_Cielo_Block</class>
			</trezo_cielo>
		</blocks>
		<resources>
			<trezo_cielo_setup>
				<setup>
					<module>Trezo_Cielo</module>
				</setup>
			</trezo_cielo_setup>
		</resources>
		<fieldsets>
			<sales_convert_quote_payment>
				<cc_installments>
					<to_order_payment>*</to_order_payment>
				</cc_installments>
			</sales_convert_quote_payment>
			<sales_convert_order_payment>
				<cc_installments>
					<to_quote_payment>*</to_quote_payment>
				</cc_installments>
			</sales_convert_order_payment>
		</fieldsets>
		<payment>
			<cc>
				<types>
					<DN>
						<code>DN</code>
                        <name>Diners Club</name>
                        <order>100</order>
                    </DN>
					<EL>
						<code>EL</code>
                        <name>Elo</name>
                        <order>110</order>
                    </EL>
                </types>
            </cc>
        </payment>
	</global>
	<frontend>
		<translate>
            <modules>
                <Trezo_Cielo>
                    <files>
                        <default>Trezo_Cielo.csv</default>
                    </files>
                </Trezo_Cielo>
            </modules>
        </translate>
	</frontend>
	<adminhtml>
		<translate>
            <modules>
                <Trezo_Cielo>
                    <files>
                        <default>Trezo_Cielo.csv</default>
                    </files>
                </Trezo_Cielo>
            </modules>
        </translate>
	</adminhtml>
	<default>
		<payment>
			<trezo_cielo>
				<payment_action>authorize</payment_action>
				<order_status>authorized</order_status>
				<model>Trezo_Cielo_Model_Cielo</model>
				<environment>teste</environment>
				<title><![CDATA[Cartão de crédito]]></title>
				<maxinstallments>10</maxinstallments>
			</trezo_cielo>
		</payment>
	</default>
</config>
