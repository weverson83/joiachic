<config>
    <modules>
        <Buscape_Ebit>
            <version>0.1.5</version>
        </Buscape_Ebit>
    </modules>
    <global>
        <models>
            <ebit>
                <class>Buscape_Ebit_Model</class>
            </ebit>
        </models>
        <blocks>
            <ebit>
                <class>Buscape_Ebit_Block</class>
            </ebit>
        </blocks>
        <helpers>
            <ebit>
                <class>Buscape_Ebit_Helper</class>
            </ebit>
        </helpers>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Buscape_Ebit>
                    <files>
                        <default>Buscape_Ebit.csv</default>
                    </files>
                </Buscape_Ebit>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <ebit_checkout_success>
                        <class>ebit/observer</class>
                        <method>setEbitSuccessPageView</method>
                    </ebit_checkout_success>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <ebit_checkout_success>
                        <class>ebit/observer</class>
                        <method>setEbitSuccessPageView</method>
                    </ebit_checkout_success>
                </observers>
            </checkout_multishipping_controller_success_action>
        </events>
        <layout>
            <updates>
                <ebit>
                    <file>buscape_ebit.xml</file>
                </ebit>
            </updates>
        </layout>
    </frontend>
</config>